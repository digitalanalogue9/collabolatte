{
  "navigationFallback": {
    "rewrite": "/404.html"
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;",
    "x-frame-options": "DENY",
    "x-content-type-options": "nosniff",
    "referrer-policy": "strict-origin-when-cross-origin",
    "permissions-policy": "geolocation=(), microphone=(), camera=()"
  },
  "mimeTypes": {
    ".css": "text/css",
    ".js": "application/javascript",
    ".html": "text/html"
  }
}
